@using MyNotes.BusinessLayer.ValueObject
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/Login-RegisterStyle.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div style="text-align: center" class="logreg mt-3">
        <main class="form-signin">
            <form>
                <img class="mb-4 rounded-circle" src="~/Images/users.png" alt="test" width="144" height="120">
                <h1 class="h3 mb-3 fw-normal">Giris Formu</h1>
                @Html.ValidationSummary(false)

                @if (ViewBag.SetLink != null)
                {
                    <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                }

                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adi", id = "floatingInput" })
                    <label for="floatingInput">Adi</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Soyadi", id = "floatingInput" })
                    <label for="floatingInput">Soyadi</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanici Adi", id = "floatingInput" })
                    <label for="floatingInput">Kullanici Adi</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email", id = "floatingInput" })
                    <label for="floatingInput">E-mail</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Sifre", id = "floatingPassword", type = "password" })
                    <label for="floatingPassword">Sifre</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Sifre Tekrari", id = "floatingRePassword", type = "password" })
                    <label for="floatingRePassword">Sifre Tekrar</label>
                </div>

                @*<div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>*@
                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
            </form>
        </main>

    </div>
}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("header").hide();
        $("footer").hide();
        $("#category2").hide();
        $("#category3").removeClass("col-md-9").addClass("col-md d-flex justify-content-center");
        $("body").addClass("bg-warning");
        $("form-control").addClass("bg-secondary");
    });
</script>